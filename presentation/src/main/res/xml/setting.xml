<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/CustomPreferenceTheme">

    <!-- FILTER Section -->
    <com.example.data.custom.CustomPreferenceCategory
        android:title="FILTER"
        app:iconSpaceReserved="false" />

    <com.example.data.custom.CustomPreference
        android:key="category"
        android:title="Category:"
        android:summary="Popular Movies" />

    <com.example.data.custom.CustomPreference
        android:key="rate"
        android:title="Movie with rate from:"
        android:summary="5" />

    <com.example.data.custom.CustomPreference
        android:key="release_year"
        android:title="From release year:"
        android:summary="2015" />

    <!-- SORT Section -->
    <com.example.data.custom.CustomPreferenceCategory
        android:title="SORT"
        app:iconSpaceReserved="false" />

    <com.example.data.custom.CustomPreference
        android:key="sort_by"
        android:title="Sort By:"
        android:summary="Release Date" />

    <!-- NUMBER OF LOADING Section -->
    <com.example.data.custom.CustomPreferenceCategory
        android:title="NUMBER OF LOADING"
        app:iconSpaceReserved="false" />

    <com.example.data.custom.CustomPreference
        android:key="pages_per_load"
        android:title="Pages per Loading:"
        android:summary="1" />

    <!-- Reset Button -->
    <Preference
        android:key="reset_settings"
        android:title="Reset Settings"
        android:summary="Click to reset all filters and sorting"
        app:iconSpaceReserved="false" />
</PreferenceScreen>